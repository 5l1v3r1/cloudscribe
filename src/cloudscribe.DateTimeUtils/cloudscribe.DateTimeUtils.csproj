<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Easy cross platform timezone conversion for .NET Core</Description>
    <Version>3.0.0-preview20190901</Version>
    <Authors>Joe Audette</Authors>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>

    <PackageTags>cloudscribe,NodaTime,timezone</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/joeaudette/cloudscribe/master/cloudscribe-icon-32.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/joeaudette/cloudscribe</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/cloudscribe/cloudscribe.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

  </PropertyGroup>

  <ItemGroup>

    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.0.0-*" />
    <PackageReference Include="NodaTime" Version="2.4.6" />
   
  </ItemGroup>

</Project>
